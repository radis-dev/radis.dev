---
import Layout from '@/layouts/Layout.astro'
import Error from '@/components/Error.astro'

const title = 'Error del servidor - RadisDev'
const description =
	'¡Hola! Soy Raúl, desarrollador de full stack. Descubre contenido sobre desarrollo web, tecnología y más para alimentar tu curiosidad por la informática.'
---

<Layout
	title={title}
	description={description}
	openGraph={{
		title: title,
		description: description,
		image: { url: '/og.png' },
	}}
>
	<Error error="500" message="¡Ups! Algo salió mal" contextMessage="Ha ocurrido un problema en el servidor. Por favor, inténtalo más tarde." />
</Layout>
