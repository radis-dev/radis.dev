---
import type { CollectionEntry } from 'astro:content'
import { Image } from 'astro:assets'

import FormattedDate from '@/components/FormattedDate.astro'

interface Props {
	article: CollectionEntry<'blog'>
}
const { article } = Astro.props
---

<li
	class="border-border_light dark:border-border_dark dark:bg-bg_dark bg-bg_light dark:hover:bg-bg_body_hover_dark hover:bg-bg_body_hover_light rounded-lg border-2 transition-colors duration-150"
>
	<a href={`/blog/${article.id}/`}>
		<article class="flex flex-col gap-y-2 rounded-md p-4">
			<Image
				src={`/images/blog/${article.id}/thumbnail.webp`}
				width="1920"
				height="1080"
				alt={article.data.thumbnail.alt}
				class="border-border_light dark:border-border_dark mb-2 w-full rounded-lg border-2"
			/>
			<h3 class="text-text-title_light dark:text-text-title_dark text-xl leading-8 font-bold tracking-tight">{article.data.title}</h3>
			<ul class="flex flex-wrap gap-x-4 gap-y-2 text-base font-medium">
				<li class="flex items-center">
					<p>
						📅 <FormattedDate date={article.data.publishedAt} />
					</p>
				</li>
				<li class="flex items-center">
					<p>
						📁 {article.data.category}
					</p>
				</li>
				<li class="flex items-center">
					<Image
						alt="Imagen de redactor"
						class="border-border_light dark:border-border_dark mr-2 h-6 w-6 rounded-full border-2"
						height="50"
						width="50"
						src="/images/about/me.webp"
					/>
					<p>Raul De Diego Diaz</p>
				</li>
			</ul>
			<p class="line-clamp-3">
				{article.data.description}
			</p>
		</article>
	</a>
</li>
